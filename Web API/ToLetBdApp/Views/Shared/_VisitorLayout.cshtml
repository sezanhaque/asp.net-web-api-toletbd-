@model ToLetBdEntity.Post

@{
    var user = (ToLetBdEntity.User)Session["user"];
   }


<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
    <title>To Let Bd | Home</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.0/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

	
</head>
<body>

	<div class="container">
		
		<nav style="background-color: #fff;border-color: #1e88e5;border-width: 2px; text-decoration-color:#fff;" class="navbar navbar-theme main-menu">

	        <div class="container-fluid">
	            
	            <div class="navbar-header">
	            	<div class="col-md-12">
	            		<a style="text-decoration:none;" href="/Home/"><h1 style="font-size:50px;">To Let BD</h1></a>
	            	</div>
	            </div>

	            
			    <ul class="nav navbar-nav navbar-right">
			      
                    @if (user != null)
                    {
                        if (user.UserTypeId == 1) {
                            <li><a href="/Admin/"><span class="glyphicon glyphicon-user"></span> @user.Name </a></li>
                        }
                        else if (user.UserTypeId == 2) { 
                            <li><a href="/HouseOwner/"><span class="glyphicon glyphicon-user"></span> @user.Name </a></li>
                        }else{
                            <li><a href="/Renter/"><span class="glyphicon glyphicon-user"></span> @user.Name </a></li>
                        }
                        
                    }
                    else {
                        <li><a href="/Login/Index"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    }
			      
			    </ul>
	               

	        </div>
		</nav>
		<div class="Main_body">
			<div class="row">
				

			      @RenderBody()
				
			</div>
		</div>
	</div>

  

	
	
	

</body>
</html>

